# Basic info for code development
student_name = "Samuel"
current_gpa = 3.7
study_hours = int(22)
social_points = int(75)
stress_level = int(50)
final_gpa = 0

# Statistics before the game starts
print("=== Welcome", student_name, "===")
print("GPA:", current_gpa)
print("Study Hours:", study_hours)
print("Social Points:", social_points)
print("Stress Level:", stress_level)

# First decision for course load
print("Choose your course load:")
print("A) Light (12 credits)")
print("B) Standard (15 credits)")
print("C) Heavy (18 credits)")

course_decision = input("A, B, or C?: ")

# Branching based on course_decision
if course_decision == "A":
    # There is an increase in study hours if a student needs it
    if current_gpa < 3.0:
        study_hours += 4
        print("Your study hours has changed from", study_hours-4, "to", study_hours)
    else:
        print("Continue to work so you can maintain a higher GPA")

# The outcomes are based on how much you need social points, decompression, or studying
elif course_decision == "B":
    if social_points < 50 < stress_level:
        print("Try to be more involved in the campus!")
    elif not (current_gpa > 3.5 or study_hours > 15):
        print("Consider a study session with others")
elif course_decision == "C":
    if current_gpa >= 3.5:
        if stress_level == 0:
            print("You have done the impossible")
        elif stress_level >= 50:
            print("Less Classes, Less Stress")
        elif stress_level < 50:
            print("Make it through")
    else:
        print("Ready for a heavy semster")
else:
    print("Input Error")

# Second decision for studying
print("Choose your course:")
print("Programming, Math, English, History")

study_decision = input("What course are you studying for?: ")

study_options = ["Programming", "Math", "English", "History"]


# Branching based on study_decision
if study_decision == "Programming" and study_decision in study_options:
    # The programs trys to find what is best for the user
    if social_points < 50 and current_gpa < 3.0:
        current_gpa += 0.45
        study_hours += 0.5
        print("Speak with a TA")
    else:
        study_hours += 0.25
        current_gpa += 0.4
        print("Talk to classmates")
elif study_decision == "Math" and study_decision in study_options:
        print("Utilize QEP Math")
        current_gpa += 0.32
elif study_decision == "English" and study_decision in study_options:
    if social_points > 75:
        print("You are a good public speaker")
        current_gpa += 0.34
    else:
        print("English is a complicated language")
        current_gpa += 0.5
elif study_decision == "English" and study_decision in study_options:
    print("Put more hours into study a map!")
    current_gpa += 0.36
elif study_decision == "Graphic Design" and study_decision not in study_options:
    print("Course not in schedule")
    current_gpa += 0.1
else:
    print("Input Error")

# Third decision for final assessments
print("Choose your course for studying today:")
print("A) Project")
print("B) Written Exam")
print("C) Oral Exam")

Final_assessment = input("A, B, or C?: ")

# Branching based on Final_assessment
if Final_assessment == "A":
    # The user's chooses can change both the social points and the stress level
    if not (social_points + 25 > 100) and not (stress_level - 25 > 0):
        social_points += 25
        stress_level -= 25
        final_gpa = current_gpa
        if final_gpa is current_gpa:
            print("All things check out")
    else:
        final_gpa = current_gpa
        print("Social points or stress level could not be changed")
# Shows the difference between Written and Oral exams
elif Final_assessment == "B":
    print("Both exams, different concepts")
    final_gpa = current_gpa
    if stress_level > 75:
        print("Don't forget to bring a pencil!")
        if final_gpa is current_gpa:
            print("All things check out")
    else:
        print("Be ready to write")
        if final_gpa is current_gpa:
            print("All things check out")
        elif final_gpa is not current_gpa:
            print("Error in code")
elif Final_assessment == "C":
    print("Both exams, different concepts")
    final_gpa = current_gpa
    # Implementation of social skills
    if social_points > 75:
        print("Your social skills will come in handy")
        if final_gpa is current_gpa:
            print("All things check out")
    else:
        print("Make flashcards for memorization")
        if final_gpa is current_gpa:
            print("All things check out")
        elif final_gpa is not current_gpa:
            print("Error in code")

# Ending Statistics
print(f"=== {student_name}'s Ending ===")
print("GPA:", round(final_gpa,2))
print("Study Hours:", study_hours)
print("Social Points:", social_points)
print("Stress Level:", stress_level)
